<% if user_signed_in? %>
  <% @orders.each_with_index do |order, index| %>
    <h1>Order #<%= order.id %> status: <%=order.status %></h1>
    <table class="table">
      <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Image</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Quantity</th>
        <th scope="col">Price</th>
        <th scope="col"></th>
      </tr>
      </thead>
      <tbody>
      <% order.cart.lineitems.each_with_index do |line_item, index| %>
        <tr>
          <td> <%= index +1 %></td>
          <td><img src=<%= line_item.product.image %> class="card-img-top" alt="..." width="100" height="100"></td>
          <td><%= line_item.product.name %></td>
          <td><%= line_item.product.description %></td>
          <td><%= line_item.quantity %> </td>
          <td><%= number_to_currency(line_item.price) %></td>
        </tr>
      <% end %>
      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td><b>Total <%= number_to_currency(order.cart.total_price) %></b><td>
      </tr>
      </tbody>
    </table>
  <% end %>
<% end %>
