<turbo-stream action="prepend" target="products">
  <template>
    <turbo-frame id="product_123">
      <div id="<%= dom_id product %>">
        <p>
          <strong>Name:</strong>
          <%= product.name %>
        </p>

        <p>
          <strong>Description:</strong>
          <%= product.description %>
        </p>

        <p>
          <strong>Price:</strong>
          <%= product.price %>
        </p>

        <p>
          <strong>Image:</strong>
          <%= product.image %>
        </p>

      </div>
    </turbo-frame>
  </template>
</turbo-stream>